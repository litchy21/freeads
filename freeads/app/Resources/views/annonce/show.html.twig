{% extends 'base.html.twig' %}

{% block body %}
    <h1>Annonce</h1>

    <table>
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ annonce.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ froala_display( annonce.description ) }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('upload/' ~ annonce.image) }}" height="100px" width="250px">
                </td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ annonce.price }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('annonces_index') }}">Back to the list</a>
        </li>
        {% if annonce.id_user == app.user.id %}
        <li>
            <a href="{{ path('annonces_edit', { 'id': annonce.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
