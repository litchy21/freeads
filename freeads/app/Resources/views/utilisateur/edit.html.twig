{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modifier le profil</h1>

    <form method="post" class="form-horizontal" id="emailForm">
        <div class="form-group">
            <label class="col-md-4 control-label" for="email">Nouvelle adresse email</label>
            <div class="col-md-4">
                <input id="email" name="email" type="email" placeholder="Entrez votre nouvelle adresse email" class="form-control input-md">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <button id="submitEmail" name="submitEmail" class="btn btn-primary">Changer email</button>
            </div>
        </div>
    </form>

    <form method="post" class="form-horizontal" id="passwordForm">
        <div class="form-group">
            <label class="col-md-4 control-label" for="password">Nouveau mot de passe</label>
            <div class="col-md-4">
                <input id="password" name="password" type="password" placeholder="Entrez votre nouveau mot de passe" class="form-control input-md">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for="confirm_password">Confirmez le mot de passe</label>
            <div class="col-md-4">
                <input id="confirm_password" name="confirm_password" type="password" placeholder="Confirmez le mot de passe" class="form-control input-md">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <button id="submitPassword" name="submitPassword" class="btn btn-primary">Changer le mot de passe</button>
            </div>
        </div>
    </form>

    <ul>
        <li>
            <a href="{{ path('user_delete', { 'id': app.user.id }) }}">Supprimer le compte</a>
        </li>
    </ul>
{% endblock %}
